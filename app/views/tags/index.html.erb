<section class="hero-section bg-contracts">
  <div class="container pt-5 text-center text-white">
    <h2 class="display-3 fw-bold">タグ一覧</h2>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">タグ別の契約書を確認できます</p>
  </div>
</section>

<main class="container my-5" style="max-width: 1200px; min-height: calc(100vh - 900px);">

  <%# --- タグ追加フォーム --- %>
  <div class="card shadow-sm rounded-4 border-0 mb-4">
    <div class="card-header bg-light border-0">
      <h5 class="mb-0 text-primary fw-bold">
        <i class="fas fa-plus me-2"></i>タグを追加
      </h5>
    </div>
    <div class="card-body p-4">
      <%= form_with url: tags_path, method: :post, local: true, class: "row g-3 align-items-end" do |f| %>
        <div class="col-md-8">
          <%= f.label :name, "タグ名", class: "form-label fw-semibold" %>
          <%= f.text_field :name, class: "form-control rounded-3 shadow-sm", placeholder: "新しいタグ名を入力してください", required: true %>
        </div>
        <div class="col-md-4">
          <%= f.submit "タグを追加", class: "btn btn-primary px-4 rounded-pill shadow-sm fw-semibold w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <%# --- セクション区切り線 --- %>
  <div class="section-divider"></div>

  <%# --- タグリスト --- %>
  <div class="row">
    <% @tags.each do |tag| %>
      <div class="col-md-4 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm fade-in rounded-4">
          <div class="card-body text-center p-4">
            <h5 class="card-title fw-bold text-primary mb-3">
              <%= link_to tag.name, contracts_path(tag: tag.name), class: "text-decoration-none text-primary" %>
            </h5>
            <p class="card-text text-muted mb-0">
              <span class="badge bg-info text-dark px-3 py-2">
                <i class="fas fa-file-contract me-1"></i><%= tag.taggings_count %>件の契約書
              </span>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# --- 戻るボタン --- %>
  <div class="mt-5 text-center">
    <%= link_to contracts_path, class: "btn btn-secondary px-4 rounded-pill shadow" do %>
      <i class="fas fa-arrow-left me-2"></i>契約書一覧に戻る
    <% end %>
  </div>

</main> 