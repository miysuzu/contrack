<!-- Heroセクション -->
<section class="hero-section position-relative" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= asset_path 'background_dashboard.png' %>) center/cover no-repeat; min-height: 400px; display: flex; align-items: center; border-radius: 0 0 32px 32px;">
  <div class="container text-center text-white">
    <h2 class="display-3 fw-bold" style="text-shadow: 0 2px 8px #0008;">
      <i class="fas fa-user-edit me-3"></i>マイページ編集
    </h2>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">ユーザー情報を編集できます</p>
  </div>
</section>

<main class="container my-5" style="max-width: 1200px; min-height: calc(100vh - 900px);">
  
  <%# --- 編集フォームカード --- %>
  <div class="card shadow-sm rounded-4 border-0">
    <div class="card-header bg-secondary bg-opacity-25 text-dark rounded-top-4">
      <h5 class="mb-0 fw-bold text-primary">
        <i class="fas fa-user-cog me-2"></i>会員情報編集
      </h5>
    </div>
    <div class="card-body p-4">
      
      <% if @user.errors.any? %>
        <div class="alert alert-danger rounded-3">
          <h5 class="fw-bold"><%= pluralize(@user.errors.count, "件のエラー") %>があります:</h5>
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @user, url: users_update_path, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :name, "氏名", class: "form-label fw-semibold" %>
          <%= f.text_field :name, class: "form-control rounded-3 shadow-sm", placeholder: "氏名を入力してください" %>
        </div>
        
        <div class="mb-4">
          <%= f.label :email, "メールアドレス", class: "form-label fw-semibold" %>
          <%= f.email_field :email, class: "form-control rounded-3 shadow-sm", placeholder: "メールアドレスを入力してください" %>
        </div>
        
        <div class="d-flex gap-3 justify-content-center">
          <%= f.submit "更新する", class: "btn btn-primary px-4 rounded-pill shadow-sm fw-semibold" %>
          <%= link_to user_mypage_path, class: "btn btn-secondary px-4 rounded-pill shadow-sm fw-semibold" do %>
            <i class="fas fa-arrow-left me-2"></i>マイページに戻る
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  
</main>
