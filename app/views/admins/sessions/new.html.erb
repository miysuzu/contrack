<%# --- Hero背景 + フォーム（フッター込みで100vh） --- %>
<div style="
  position: relative;
  background: url('<%= asset_path("login_hero_bg.png") %>') left top / cover no-repeat;
  background-size: cover;
  min-height: calc(100vh - 200px);
  padding-top: 64px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
">

  <%# --- ログインフォーム --- %>
  <div style="
    position: relative;
    right: 10%;
    width: 400px;
  ">
    <div class="card shadow-sm" style="border-radius: 16px; background-color: #f8f9fa;">
      <div class="card-body p-4">
        <h2 class="text-center fw-bold text-primary mb-4">管理者ログイン</h2>

        <%= form_for(:admin, url: admin_session_path) do |f| %>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label fw-bold" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
          </div>

          <div class="d-grid">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
