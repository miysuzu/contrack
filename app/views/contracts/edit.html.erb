<div class="container fade-in" style="max-width: 700px;">
  <h2 class="display-6 fw-bold mb-4 p-3 text-center" style="background: #e0f7fa; color: #009fe8; border-radius: 8px;">契約書を編集</h2>

  <%= render 'form' %>

  <div class="mt-4 text-center">
    <%= link_to "削除", contract_path(@contract), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger px-4" %>
    <%= link_to "戻る", contract_path(@contract), class: "btn btn-secondary px-4" %>
  </div>
</div>
