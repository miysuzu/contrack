<!-- Heroセクション -->
<section class="hero-section position-relative" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= asset_path('background_wave.png') %>') center/cover no-repeat; min-height: 400px; display: flex; align-items: center; border-radius: 0 0 32px 32px;">
  <div class="container text-center text-white">
    <h1 class="display-4 fw-bold" style="text-shadow: 0 2px 8px #0008;">グループ参加申請一覧</h1>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">グループへの参加申請を管理できます</p>
  </div>
</section>

<!-- コンテンツ本体 -->
<div class="custom-wide-container fade-in" style="width: 100%; max-width: 1200px; margin: 48px auto 0 auto; padding-left: 24px; padding-right: 24px; min-height: calc(100vh - 900px);">

  <%# --- 申請一覧 --- %>
  <% if @requests.any? %>
    <% @requests.each do |request| %>
      <div class="card mb-4 p-3 shadow-sm fade-in rounded-4">
        <div class="d-md-flex justify-content-between align-items-start gap-4">
          <div class="flex-fill">
            <div class="row">
              <div class="col-md-6">
                <h5 class="fw-bold text-primary mb-2">
                  <i class="fas fa-user me-2"></i>申請者
                </h5>
                <p class="mb-2">
                  <strong><%= request.user.name %></strong>
                </p>
                <small class="text-muted">
                  <i class="fas fa-envelope me-1"></i><%= request.user.email %>
                </small>
              </div>
              <div class="col-md-6">
                <h5 class="fw-bold text-primary mb-2">
                  <i class="fas fa-users me-2"></i>申請先グループ
                </h5>
                <p class="mb-2">
                  <%= link_to request.group.name, group_path(request.group), class: 'text-decoration-none text-primary fw-bold' %>
                </p>
                <small class="text-muted">
                  <i class="fas fa-calendar me-1"></i>申請日: <%= request.created_at.strftime('%Y年%m月%d日 %H:%M') %>
                </small>
              </div>
            </div>
          </div>

          <%# 操作ボタン %>
          <div class="action-buttons mt-3 mt-md-0 d-flex gap-2">
            <%= button_to approve_group_join_request_path(request), 
                method: :post, 
                class: "btn btn-success rounded-pill px-4 py-2 shadow-sm d-flex align-items-center gap-2",
                data: { confirm: "#{request.user.name}さんの参加申請を承認しますか？" } do %>
              <i class="fas fa-check"></i><span>承認</span>
            <% end %>
            <%= button_to reject_group_join_request_path(request), 
                method: :post, 
                class: "btn btn-danger rounded-pill px-4 py-2 shadow-sm d-flex align-items-center gap-2",
                data: { confirm: "#{request.user.name}さんの参加申請を拒否しますか？" } do %>
              <i class="fas fa-times"></i><span>拒否</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <%# --- 空の状態 --- %>
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-inbox fa-4x text-muted"></i>
      </div>
      <p class="text-muted mt-3">現在、承認待ちの申請はありません。</p>
    </div>
  <% end %>

  <%# --- 戻るボタン --- %>
  <div class="mt-5 text-center">
    <%= link_to group_searches_path, class: "btn btn-secondary px-4 rounded-pill shadow" do %>
      <i class="fas fa-arrow-left me-2"></i>グループ一覧に戻る
    <% end %>
  </div>

</div> 