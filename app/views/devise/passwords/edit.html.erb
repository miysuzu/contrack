<%# --- Hero背景 + フォーム（フッター込みで100vh） --- %>
<div style="
  position: relative;
  background: url('<%= asset_path("login_hero_bg.png") %>') left top / cover no-repeat;
  background-size: cover;
  min-height: calc(100vh - 200px);
  padding-top: 64px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
">

  <%# --- パスワード変更フォーム --- %>
  <div style="
    position: relative;
    right: 10%;
    width: 400px;
  ">
    <div class="card shadow-sm" style="border-radius: 16px; background-color: #f8f9fa;">
      <div class="card-body p-4">
        <h2 class="text-center fw-bold text-primary mb-4">パスワード変更</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          
          <div class="mb-3">
            <%= f.label :password, "新しいパスワード", class: "form-label fw-bold" %>
            <% if @minimum_password_length %>
              <small class="text-muted">（<%= @minimum_password_length %>文字以上）</small>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label fw-bold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="d-grid">
            <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
