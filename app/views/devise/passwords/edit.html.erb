<%# --- ヒーローイメージ・タイトル --- %>
<div style="background: linear-gradient(120deg, #e0f7fa 0%, #b2ebf2 100%); min-height: 160px; border-radius: 0 0 32px 32px;">
  <div class="container py-3 text-center">
    <h2 class="fw-bold text-primary">パスワード変更</h2>
  </div>
</div>

<div class="container fade-in" style="max-width: 400px; margin-top: -40px;">
  <div class="card shadow-sm" style="border-radius: 16px;">
    <div class="card-body p-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="mb-3">
          <%= f.label :password, "新しいパスワード", class: "form-label fw-bold" %>
          <% if @minimum_password_length %>
            <small class="text-muted">（<%= @minimum_password_length %>文字以上）</small>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label fw-bold" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
        </div>
        <div class="d-grid">
          <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
