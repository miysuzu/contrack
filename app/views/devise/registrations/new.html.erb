<%# --- Hero背景 + フォーム（フッター込みで100vh） --- %>
<div style="
  position: relative;
  background: url('<%= asset_path("login_hero_bg.png") %>') left top / cover no-repeat;
  background-size: cover;
  min-height: calc(100vh - 200px);
  padding-top: 64px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
">

  <%# --- 新規登録フォーム --- %>
  <div style="
    position: relative;
    right: 10%;
    width: 400px;
  ">
    <div class="card shadow-sm" style="border-radius: 16px; background-color: #f8f9fa;">
      <div class="card-body p-4">
        <h2 class="text-center fw-bold text-primary mb-4">新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :name, "お名前", class: "form-label fw-bold" %>
            <%= f.text_field :name, autocomplete: "name", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label fw-bold" %>
            <% if @minimum_password_length %>
              <small class="text-muted">（<%= @minimum_password_length %>文字以上）</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label fw-bold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="mb-3">
            <%= f.label :company_id, "会社を選択", class: "form-label fw-bold" %>
            <%= f.collection_select :company_id, Company.all, :id, :name, { include_blank: true }, { class: "form-control rounded-3 shadow-sm" } %>
          </div>

          <div class="d-grid">
            <%= f.submit "登録する", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>