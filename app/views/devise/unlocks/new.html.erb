<%# --- ヒーローイメージ・タイトル --- %>
<div style="background: linear-gradient(120deg, #e0f7fa 0%, #b2ebf2 100%); min-height: 160px; border-radius: 0 0 32px 32px;">
  <div class="container py-3 text-center">
    <h2 class="fw-bold text-primary">アカウントロック解除</h2>
  </div>
</div>

<div class="container fade-in" style="max-width: 400px; margin-top: -40px;">
  <div class="card shadow-sm" style="border-radius: 16px;">
    <div class="card-body p-4">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3 shadow-sm" %>
        </div>
        <div class="d-grid">
          <%= f.submit "ロック解除メールを送信", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
