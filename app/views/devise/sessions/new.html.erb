<%# --- パスワードリセットメールプレビュー（ログインフォーム横） --- %>
<% if flash[:password_email_preview] %>
  <div style="
    position: fixed;
    top: 43%;
    right: 33%;
    transform: translateY(-50%);
    width: 400px;
    max-height: 80vh;
    z-index: 1000;
  ">
    <div class="card border-warning shadow-lg">
      <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
          <i class="fas fa-envelope me-2"></i>パスワードリセットメールプレビュー
        </h6>
        <button type="button" class="btn-close" onclick="this.closest('.card').style.display='none';"></button>
      </div>
      <div class="card-body" style="max-height: 60vh; overflow-y: auto;">
        <pre style="background-color: #f8f9fa; padding: 0.75rem; border-radius: 0.375rem; overflow-x: auto; margin-bottom: 0; font-size: 0.875rem; white-space: pre-wrap;"><%= flash[:password_email_preview] %></pre>
      </div>
    </div>
  </div>
<% end %>

<%# --- Hero背景 + フォーム（フッター込みで100vh） --- %>
<div style="
  position: relative;
  background: url('<%= asset_path("login_hero_bg.png") %>') left top / cover no-repeat;
  background-size: cover;
  min-height: calc(100vh - 200px);
  padding-top: 64px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
">

  <%# --- ログインフォーム --- %>
  <div style="
    position: relative;
    right: 10%;
    width: 400px;
  ">
    <div class="card shadow-sm" style="border-radius: 16px; background-color: #f8f9fa;">
      <div class="card-body p-4">
        <h2 class="text-center fw-bold text-primary mb-4">ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label fw-bold" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-3 shadow-sm" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
