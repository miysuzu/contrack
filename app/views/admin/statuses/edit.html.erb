<!-- Heroセクション -->
<section class="hero-section" style="background: linear-gradient(135deg, #009fe8 0%, #0066cc 100%);">
  <div class="container pt-5 text-center text-white">
    <h2 class="display-3 fw-bold">
      <i class="fas fa-edit me-3"></i>ステータス編集
    </h2>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">ステータスの情報を編集できます</p>
  </div>
</section>

<main class="container my-5" style="max-width: 1200px; min-height: calc(100vh - 900px);">
  
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow mb-4" style="border-radius: 16px;">
        <div class="card-body">
          <h5 class="card-title text-primary fw-bold mb-3">
            <i class="fas fa-list me-2"></i>ステータス情報
          </h5>
          
          <%= form_with model: @status, url: admin_status_path(@status), method: :patch, local: true do |f| %>
            <% if @status.errors.any? %>
              <div class="alert alert-danger rounded-3">
                <h5 class="fw-bold"><%= pluralize(@status.errors.count, "件のエラー") %>があります:</h5>
                <ul class="mb-0">
                  <% @status.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="form-group mb-3">
              <%= f.label :name, "ステータス名", class: "form-label fw-bold" %>
              <%= f.text_field :name, class: "form-control rounded-3 shadow-sm", placeholder: "ステータス名を入力してください" %>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
              <%= f.submit "更新する", class: "btn btn-primary px-4" %>
              <%= link_to admin_statuses_path, class: "btn btn-secondary px-4" do %>
                <i class="fas fa-arrow-left me-2"></i>一覧へ戻る
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
</main>
