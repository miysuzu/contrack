<!-- Heroセクション -->
<section class="hero-section" style="background: linear-gradient(135deg, #009fe8 0%, #0066cc 100%);">
  <div class="container pt-5 text-center text-white">
    <h2 class="display-3 fw-bold">
      <i class="fas fa-list me-3"></i>ステータス一覧
    </h2>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">契約書のステータスを管理します</p>
  </div>
</section>

<main class="container my-5" style="max-width: 1200px; min-height: calc(100vh - 900px);">

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%# --- 新規作成フォーム --- %>
      <div class="card shadow mb-4" style="border-radius: 16px;">
        <div class="card-body">
          <h5 class="card-title text-primary fw-bold mb-3">
            <i class="fas fa-plus me-2"></i>新規ステータス作成
          </h5>
          <%= form_with model: @status, url: admin_statuses_path, local: true do |f| %>
            <div class="form-group mb-3">
              <%= f.label :name, "ステータス名", class: "form-label fw-bold" %>
              <%= f.text_field :name, class: "form-control rounded-3 shadow-sm", placeholder: "ステータス名を入力してください" %>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
              <%= f.submit "追加", class: "btn btn-primary px-4" %>
            </div>
          <% end %>
        </div>
      </div>

      <%# --- ステータス一覧 --- %>
      <div class="card shadow mb-4" style="border-radius: 16px;">
        <div class="card-body">
          <h5 class="card-title text-primary fw-bold mb-3">
            <i class="fas fa-list me-2"></i>ステータス一覧
          </h5>
          <div class="table-responsive">
            <table class="table table-striped align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>ステータス名</th>
                  <th class="text-end">操作</th>
                </tr>
              </thead>
              <tbody>
                <% @statuses.each do |status| %>
                  <tr>
                    <td><%= status.id %></td>
                    <td><%= status.name %></td>
                    <td class="text-end">
                      <%= link_to edit_admin_status_path(status), class: "btn btn-sm btn-outline-warning me-2" do %>
                        <i class="fas fa-edit me-1"></i>編集
                      <% end %>
                      <%= link_to admin_status_path(status),
                                  method: :delete,
                                  data: { confirm: "削除しますか？" },
                                  class: "btn btn-sm btn-outline-danger" do %>
                        <i class="fas fa-trash me-1"></i>削除
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>
