<div class="container fade-in">
  <div class="mb-4">
    <h2>
      <i class="fas fa-edit me-2"></i>メモ編集
    </h2>
  </div>

  <div class="card">
    <div class="card-body">
      <%= form_with model: [@contract, @comment], local: true do |f| %>
        <% if @comment.errors.any? %>
          <div class="alert alert-danger">
            <h6><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h6>
            <ul>
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :content, 'メモ内容', class: 'form-label' %>
          <%= f.text_area :content, class: 'form-control', rows: 4 %>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit '更新', class: 'btn btn-primary' %>
          <%= link_to 'キャンセル', admin_contract_path(@contract), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div> 