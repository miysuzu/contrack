<div class="container fade-in" style="max-width: 900px;">
  <h2 class="display-6 fw-bold mb-4 p-3 text-center" style="background: #e0f7fa; color: #009fe8; border-radius: 8px;">会員一覧</h2>
  <table class="table table-striped align-middle shadow-sm">
    <thead class="table-light">
      <tr>
        <th>ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_active %>
              <span class="badge bg-success">有効</span>
            <% else %>
              <span class="badge bg-secondary text-dark">退会</span>
            <% end %>
          </td>
          <td>
            <%= link_to '詳細', admin_user_path(user), class: "btn btn-sm btn-outline-primary me-1" %>
            <%= link_to '編集', edit_admin_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

