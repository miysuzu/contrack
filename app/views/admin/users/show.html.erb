<div class="container fade-in" style="max-width: 700px;">
  <h2 class="display-6 fw-bold mb-4 p-3 text-center" style="background: #e0f7fa; color: #009fe8; border-radius: 8px;">会員詳細</h2>
  <div class="mb-4 px-3">
    <p class="mb-2"><strong>氏名：</strong><%= @user.name %></p>
    <p class="mb-2"><strong>メール：</strong><%= @user.email %></p>
    <p class="mb-2"><strong>ステータス：</strong>
      <% if @user.is_active %>
        <span class="badge bg-success">有効</span>
      <% else %>
        <span class="badge bg-secondary text-dark">退会</span>
      <% end %>
    </p>
    <div class="mt-3">
      <%= link_to '編集', edit_admin_user_path(@user), class: "btn btn-outline-primary" %>
    </div>
  </div>
  <h3 class="mt-4 mb-3">投稿一覧</h3>
  <table class="table table-striped align-middle shadow-sm">
    <thead class="table-light">
      <tr>
        <th>タイトル</th>
        <th>ステータス</th>
        <th>登録日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @contracts.each do |contract| %>
        <tr>
          <td><%= contract.title %></td>
          <td><%= contract.status.name %></td>
          <td><%= l(contract.created_at, format: :short) %></td>
          <td><%= link_to '詳細', admin_contract_path(contract), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
