<!-- Heroセクション -->
<section class="hero-section bg-contracts">
  <div class="container pt-5 text-center text-white">
    <h2 class="display-3 fw-bold">タグ管理</h2>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">契約書のタグを管理します</p>
  </div>
</section>

<main class="container my-5" style="max-width: 1200px; min-height: calc(100vh - 900px);">

  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- 検索フォーム -->
      <div class="card shadow mb-4" style="border-radius: 16px;">
        <div class="card-body">
          <h5 class="card-title text-primary fw-bold mb-3">
            <i class="fas fa-search me-2"></i>タグ検索
          </h5>
          <%= form_with url: admin_tags_path, method: :get, local: true, class: "row g-3" do %>
            <div class="col-md-8">
              <%= text_field_tag :keyword, params[:keyword], 
                  placeholder: "タグ名で検索...", 
                  class: "form-control rounded-3 shadow-sm" %>
            </div>
            <div class="col-md-4">
              <%= submit_tag "検索", class: "btn btn-primary px-4 me-2" %>
              <%= link_to "クリア", admin_tags_path, class: "btn btn-outline-secondary px-4" %>
            </div>
          <% end %>
        </div>
      </div>

      <% if @tags.any? %>
        <!-- タグ一覧 -->
        <div class="card shadow mb-4" style="border-radius: 16px;">
          <div class="card-body">
            <h5 class="card-title text-primary fw-bold mb-3">
              <i class="fas fa-list me-2"></i>登録されているタグ一覧
            </h5>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>タグ名</th>
                    <th>使用回数</th>
                    <th>作成日</th>
                    <th class="text-end">操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% @tags.each do |tag| %>
                    <tr style="cursor: pointer;" onclick="window.location.href='<%= admin_contracts_path(tag: tag.name) %>'">
                      <td>
                        <span class="badge bg-info text-dark px-3 py-2 fs-6 rounded-pill">
                          <i class="fas fa-tag me-1"></i><%= tag.name %>
                        </span>
                      </td>
                      <td>
                        <span class="badge bg-secondary rounded-pill">
                          <i class="fas fa-link me-1"></i><%= tag.taggings_count %>件
                        </span>
                      </td>
                      <td>
                        <i class="fas fa-calendar-alt text-muted me-1"></i>
                        <%= l(tag.created_at, format: :short) if tag.created_at %>
                      </td>
                      <td class="text-end">
                        <%= link_to admin_tag_path(tag), class: "btn btn-sm btn-outline-primary me-2", onclick: "event.stopPropagation();" do %>
                          <i class="fas fa-eye me-1"></i>詳細
                        <% end %>
                        <%= link_to admin_tag_path(tag),
                                    method: :delete,
                                    data: { confirm: "このタグを削除しますか？\n関連する契約書からもタグが削除されます。" },
                                    class: "btn btn-sm btn-outline-danger",
                                    onclick: "event.stopPropagation();" do %>
                          <i class="fas fa-trash me-1"></i>削除
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="mt-3 text-center">
              <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>全<%= @tags.count %>件のタグ
              </small>
            </div>
          </div>
        </div>
      <% else %>
        <!-- タグが存在しない場合 -->
        <div class="card shadow mb-4" style="border-radius: 16px;">
          <div class="card-body text-center py-5">
            <i class="fas fa-tags text-muted mb-3" style="font-size: 3rem;"></i>
            <h5 class="text-muted">タグがまだ登録されていません</h5>
            <p class="text-muted mb-0">契約書にタグを追加すると、ここに表示されます。</p>
          </div>
        </div>
      <% end %>

      <!-- 戻るボタン -->
      <div class="text-center">
        <%= link_to admin_contracts_path, class: "btn btn-secondary px-4" do %>
          <i class="fas fa-arrow-left me-2"></i>契約書一覧に戻る
        <% end %>
      </div>
    </div>
  </div>

</main>
