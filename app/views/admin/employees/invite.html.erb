<!-- Heroセクション -->
<section class="hero-section bg-dashboard">
  <div class="container pt-5 text-center text-white">
    <h2 class="display-3 fw-bold">
      <i class="fas fa-user-plus me-3"></i>従業員招待
    </h2>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">新しい従業員を招待してチームに参加してもらいます</p>
  </div>
</section>

<main class="container my-5" style="max-width: 1200px; min-height: calc(100vh - 900px);">
  
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow mb-4" style="border-radius: 16px;">
        <div class="card-body">
          <h5 class="card-title text-primary fw-bold mb-3">
            <i class="fas fa-envelope me-2"></i>招待メール送信
          </h5>
          
          <%= form_with url: create_invite_admin_employees_path, method: :post, local: true do |f| %>
            <div class="form-group mb-3">
              <%= label_tag :email, "従業員のメールアドレス", class: "form-label fw-bold" %>
              <%= email_field_tag :email, nil, class: "form-control rounded-3 shadow-sm", required: true, placeholder: "example@company.com" %>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
              <%= submit_tag "招待する", class: "btn btn-primary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
      
      <% if flash[:invite_email_preview] %>
        <div class="card shadow mb-4" style="border-radius: 16px;">
          <div class="card-body">
            <h5 class="card-title text-info fw-bold mb-3">
              <i class="fas fa-eye me-2"></i>送信されるメール内容（プレビュー）
            </h5>
            <div class="bg-light p-3 rounded">
              <pre class="mb-0"><%= flash[:invite_email_preview] %></pre>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main> 