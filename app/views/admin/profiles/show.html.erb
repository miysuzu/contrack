<section class="hero-section position-relative" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= asset_path 'background_admin.png' %>) center/cover no-repeat; min-height: 400px; display: flex; align-items: center; border-radius: 0 0 32px 32px;">
  <div class="container text-center text-white">
    <h2 class="display-3 fw-bold" style="text-shadow: 0 2px 8px #0008;">マイページ</h2>
    <p class="fs-5" style="text-shadow: 0 1px 4px #0006;">管理者情報や契約書の管理はこちら</p>
  </div>
</section>

<main class="container my-5" style="max-width: 1200px; min-height: calc(100vh - 900px);">
  
  <%# --- 管理者情報カード --- %>
  <div class="card shadow mb-4" style="border-radius: 16px;">
    <div class="card-body">
      <h5 class="card-title text-primary fw-bold mb-3">管理者情報</h5>
      <dl class="row mb-0">
        <dt class="col-sm-4">氏名</dt>
        <dd class="col-sm-8"><%= @admin.name %></dd>

        <dt class="col-sm-4">メールアドレス</dt>
        <dd class="col-sm-8"><%= @admin.email %></dd>

        <dt class="col-sm-4">所属</dt>
        <dd class="col-sm-8"><%= @admin.company&.name || '未設定' %></dd>

        <dt class="col-sm-4">アカウント作成日</dt>
        <dd class="col-sm-8"><%= @admin.created_at.strftime('%Y年%m月%d日 %H:%M') %></dd>
      </dl>
      <div class="mt-3 text-end">
        <%= link_to '管理者情報を編集する', admin_edit_mypage_path, class: 'btn btn-outline-primary btn-sm' %>
      </div>
    </div>
  </div>

  <%# --- 管理項目カード --- %>
  <div class="card shadow mb-4" style="border-radius: 16px;">
    <div class="card-body">
      <h5 class="card-title text-primary fw-bold mb-3">管理項目</h5>
      <div class="row g-3">
        <!-- 契約書 -->
        <div class="col-lg-4 col-md-6 col-12">
          <div class="d-flex justify-content-between align-items-center p-4 border rounded-3 bg-light h-100">
            <div class="d-flex align-items-center">
              <i class="fas fa-file-contract text-primary me-3 fa-lg"></i>
              <span class="fw-semibold">契約書</span>
            </div>
            <%= link_to admin_contracts_path, class: "btn btn-outline-primary btn-sm rounded-pill" do %>
              <i class="fas fa-list me-1"></i>一覧を見る
            <% end %>
          </div>
        </div>

        <!-- ユーザー -->
        <div class="col-lg-4 col-md-6 col-12">
          <div class="d-flex justify-content-between align-items-center p-4 border rounded-3 bg-light h-100">
            <div class="d-flex align-items-center">
              <i class="fas fa-users text-success me-3 fa-lg"></i>
              <span class="fw-semibold">ユーザー</span>
            </div>
            <%= link_to admin_users_path, class: "btn btn-outline-success btn-sm rounded-pill" do %>
              <i class="fas fa-list me-1"></i>一覧を見る
            <% end %>
          </div>
        </div>

        <!-- グループ -->
        <div class="col-lg-4 col-md-6 col-12">
          <div class="d-flex justify-content-between align-items-center p-4 border rounded-3 bg-light h-100">
            <div class="d-flex align-items-center">
              <i class="fas fa-layer-group text-warning me-3 fa-lg"></i>
              <span class="fw-semibold">グループ</span>
            </div>
            <%= link_to admin_groups_path, class: "btn btn-outline-warning btn-sm rounded-pill" do %>
              <i class="fas fa-list me-1"></i>一覧を見る
            <% end %>
          </div>
        </div>

        <!-- タグ -->
        <div class="col-lg-4 col-md-6 col-12">
          <div class="d-flex justify-content-between align-items-center p-4 border rounded-3 bg-light h-100">
            <div class="d-flex align-items-center">
              <i class="fas fa-tags text-danger me-3 fa-lg"></i>
              <span class="fw-semibold">タグ</span>
            </div>
            <%= link_to admin_tags_path, class: "btn btn-outline-danger btn-sm rounded-pill" do %>
              <i class="fas fa-list me-1"></i>一覧を見る
            <% end %>
          </div>
        </div>

        <!-- ステータス -->
        <div class="col-lg-4 col-md-6 col-12">
          <div class="d-flex justify-content-between align-items-center p-4 border rounded-3 bg-light h-100">
            <div class="d-flex align-items-center">
              <i class="fas fa-list-alt text-secondary me-3 fa-lg"></i>
              <span class="fw-semibold">ステータス</span>
            </div>
            <%= link_to admin_statuses_path, class: "btn btn-outline-secondary btn-sm rounded-pill" do %>
              <i class="fas fa-list me-1"></i>一覧を見る
            <% end %>
          </div>
        </div>

        <!-- テンプレート -->
        <div class="col-lg-4 col-md-6 col-12">
          <div class="d-flex justify-content-between align-items-center p-4 border rounded-3 bg-light h-100">
            <div class="d-flex align-items-center">
              <i class="fab fa-slack text-info me-3 fa-lg"></i>
              <span class="fw-semibold">テンプレート</span>
            </div>
            <%= link_to admin_slack_message_templates_path, class: "btn btn-outline-info btn-sm rounded-pill" do %>
              <i class="fas fa-list me-1"></i>一覧を見る
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# --- 統計情報カード --- %>
  <div class="card shadow mb-5" style="border-radius: 16px;">
    <div class="card-body">
      <h5 class="card-title text-primary fw-bold mb-3">統計情報</h5>
      <div class="row g-3">
        <div class="col-md-4 text-center">
          <div class="p-3">
            <i class="fas fa-file-contract text-primary fa-2x mb-2"></i>
            <h4 class="fw-bold text-primary"><%= @admin.company&.contracts&.count || 0 %></h4>
            <p class="text-muted mb-0">契約書数</p>
          </div>
        </div>
        <div class="col-md-4 text-center">
          <div class="p-3">
            <i class="fas fa-users text-success fa-2x mb-2"></i>
            <h4 class="fw-bold text-success"><%= @admin.company&.users&.count || 0 %></h4>
            <p class="text-muted mb-0">ユーザー数</p>
          </div>
        </div>
        <div class="col-md-4 text-center">
          <div class="p-3">
            <i class="fas fa-layer-group text-warning fa-2x mb-2"></i>
            <h4 class="fw-bold text-warning"><%= @admin.company&.groups&.count || 0 %></h4>
            <p class="text-muted mb-0">グループ数</p>
          </div>
        </div>
      </div>
    </div>
  </div>

</main> 