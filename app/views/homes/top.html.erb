<!-- Heroセクション -->
<div class="main-feature">
  <section class="hero-section top-page-hero position-relative"
    style="background: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.05)),
    url('<%= asset_path('visual_hero_pair.png') %>') center/cover no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;">
    
    <div class="main-feature-inner text-center text-white d-flex flex-column align-items-center">

      <!-- ロゴ -->
      <%= image_tag 'logo.png', alt: 'Contrack',
        class: 'hero-logo mx-auto d-block mb-4',
        style: 'max-width: 280px; height: auto; filter: brightness(0) invert(1);' %>

      <!-- キャッチコピー -->
      <h1 class="display-3 fw-bold mb-4 hero-title" style="text-shadow: 0 2px 8px #0008;">
        契約管理を、<br>もっとスマートに。
      </h1>

      <!-- サブコピー -->
      <p class="fs-5 mb-5" style="text-shadow: 0 1px 4px #0006; max-width: 720px;">
        煩雑な契約業務をひとつに。<br>
        Contrackで、契約書の共有から期限管理・承認までをスマートに一元化。
      </p>

      <% unless user_signed_in? %>
        <!-- ボタン -->
        <div class="d-flex gap-3 justify-content-center">
          <%= link_to "新規登録", new_user_registration_path,
            class: "btn btn-primary btn-lg px-5 shadow text-center" %>
          <%= link_to "ログイン", new_user_session_path,
            class: "btn btn-outline-light btn-lg px-5 shadow text-center" %>
        </div>
      <% end %>

    </div>
  </section>
</div>

<!-- サービス紹介セクション -->
<section class="py-8">
